import { StrictMode } from 'react'
import { createRoot } from 'react-dom/client'
import { BrowserRouter } from 'react-router-dom'
import { Provider } from 'react-redux'
import './index.css'
import App from './App.tsx'
import { StytchProvider } from './providers/StytchProvider'
import { store } from './redux/store'
import { setColorScheme } from './redux/slices/appSlice'
import { ThemeProvider } from './theme'
import { LoadingProvider } from './loading'
import { AppErrorBoundary } from './error-boundary'

// Initialize theme BEFORE React renders to prevent flash
const storedTheme = localStorage.getItem('colorScheme');
const initialTheme = (storedTheme === 'light' || storedTheme === 'dark' || storedTheme === 'system')
  ? storedTheme
  : 'system';

// Set initial theme in Redux store
store.dispatch(setColorScheme(initialTheme));

// Calculate and apply initial effective theme
const systemTheme = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
const effectiveTheme = initialTheme === 'system' ? systemTheme : initialTheme;
document.documentElement.classList.toggle('dark', effectiveTheme === 'dark');

createRoot(document.getElementById('root')!).render(
  <StrictMode>
    <Provider store={store}>
      <AppErrorBoundary>
        <ThemeProvider>
          <LoadingProvider>
            <BrowserRouter>
              <StytchProvider>
                <App />
              </StytchProvider>
            </BrowserRouter>
          </LoadingProvider>
        </ThemeProvider>
      </AppErrorBoundary>
    </Provider>
  </StrictMode>,
)
